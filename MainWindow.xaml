<Window x:Class="game_quiz_demo_cs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cyber Security Quiz Game" Height="450" Width="800">

    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="700">

            <!-- Title -->
            <TextBlock Text="Cyber Security Quiz [Game]"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10" />

            <!-- Question -->
            <TextBlock x:Name="questionTextBlock"
                       Text="Question goes here..."
                       FontSize="16"
                       FontWeight="SemiBold"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10" />

            <!-- Answer buttons -->
            <Button x:Name="firstChoiceButton"
                    Click="HandleAnswerSelection"
                    Padding="15"
                    Margin="0,5" />

            <Button x:Name="secondChoiceButton"
                    Click="HandleAnswerSelection"
                    Padding="15"
                    Margin="0,5" />

            <Button x:Name="thirdChoiceButton"
                    Click="HandleAnswerSelection"
                    Padding="15"
                    Margin="0,5" />

            <Button x:Name="fourthChoiceButton"
                    Click="HandleAnswerSelection"
                    Padding="15"
                    Margin="0,5" />

            <!-- Next button -->
            <Button x:Name="nextQuestionButton"
                    Content="Next"
                    Background="BurlyWood"
                    FontWeight="Bold"
                    Click="HandleNextQuestion"
                    Padding="15"
                    Margin="0,20,0,10" />

            <!-- Score display -->
            <TextBlock x:Name="scoreTextBlock"
                       Text="Play the game to begin"
                       FontStyle="Italic"
                       FontSize="14"
                       HorizontalAlignment="Right"
                       Margin="0,10,0,0" />

        </StackPanel>
    </Grid>
</Window>
